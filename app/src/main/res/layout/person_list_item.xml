<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/prs_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="fill"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_prs_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/temp_prs_name"/>
            <TextView
                android:id="@+id/tv_prs_gross"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/ico_next"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/lbl_value"/>
            <ImageView
                android:id="@+id/ico_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="@color/theme_bg"
                android:src="@drawable/next_icon"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>